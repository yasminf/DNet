<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.androidhive"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="8" />

    <!-- Internet Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name="com.example.androidhive.AndroidTabAndListView"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Official List Activity -->
        <activity android:name="com.example.androidhive.OfficialListActivity" />

        <!-- Outbox Activity -->
        <activity android:name="com.example.androidhive.CommunityListActivity" />

        <!-- Profile Activity -->
        <activity android:name="com.example.androidhive.ProfileActivity" />
        <activity android:name="com.example.androidhive.PostsActivity" />
    </application>

</manifest>